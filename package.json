{
  "name": "atom-ts-transpiler",
  "version": "1.4.0",
  "description": "A transpiler for Atom packages that processes code with TypeScript",
  "author": "smhxx <captaintrek@gmail.com>",
  "main": "dist/index.js",
  "keywords": [
    "atom",
    "typescript",
    "ts",
    "transpile",
    "transpiler"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smhxx/atom-ts-transpiler.git"
  },
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "coverage": "mocha --opts spec/mocha.opts --coverage",
    "deploy": "semantic-release",
    "lint": "tslint -p src",
    "lintspec": "tslint -p spec",
    "prepublishOnly": "npm run build",
    "test": "mocha --opts spec/mocha.opts"
  },
  "peerDependencies": {
    "typescript": "^1.6.0 || ^2.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.1",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.46",
    "@types/node": "^9.3.0",
    "@types/sinon": "^4.1.3",
    "@types/sinon-chai": "^2.7.29",
    "atom-mocha-test-runner": "^1.2.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.0.0",
    "semantic-release": "^12.2.2",
    "sinon": "^4.1.6",
    "sinon-chai": "^2.14.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.3.0",
    "typescript": "^2.5.3"
  },
  "license": "MIT"
}
